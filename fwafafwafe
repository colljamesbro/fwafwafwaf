-- Script inside ServerScriptService

local ReplicatedStorage = game:GetService("ReplicatedStorage")
local kickEvent = ReplicatedStorage:WaitForChild("KickEvent")

-- Function to kick all players except the sender
local function kickOtherPlayers(player)
    for _, plr in pairs(game.Players:GetPlayers()) do
        if plr.Name ~= player.Name then
            plr:Kick("You have been kicked out of the game!")
        end
    end
end

-- Listen for the RemoteEvent call from the client
kickEvent.OnServerEvent:Connect(kickOtherPlayers)
